    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS"/>
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />


    <application
        android:usesCleartextTraffic="true"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Project"
        tools:targetApi="31">
        <activity
            android:name=".alarm.AlarmOnActivity"
            android:exported="false" />
        <activity
            android:name=".home.SummerAnimation"
            android:exported="false" />
        <activity
            android:name=".alarm.add.AlarmAddActivity"
            android:exported="false" />
        <activity android:name=".alarm.AlarmManagerActivity"/>
        <!--        <activity android:name=".alarm.list.ListViewActivity" />-->
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".alarm.AlarmReceiver"
            android:exported="true">
            <intent-filter>
                <action android:name="smu.mp.project.ALARM_START"/>
            </intent-filter>
        </receiver>

        <service
            android:name=".alarm.AlarmService"
            android:enabled="true"
            android:exported="true" />

        <service android:name=".alarm.list.MusicService" />
    </application>

</manifest>